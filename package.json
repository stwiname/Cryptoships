    "test": "truffle test",
    "typechain": "npm run typechain-truffle && npm run typechain-web3",
    "typechain-truffle": "typechain --target truffle \"build/**/*.json\"",
    "typechain-web3": "typechain --target web3-1.0.0 \"build/**/*.json\"",
    "build-server": "generate && tsc -p .",
    "build-web": "webpack",
    "watch-server": "tsc -w -p .",
    "watch-web": "webpack -w",
    "serve": "npx serve",
    "start": "node ./scripts/watch-task.js"
  },
