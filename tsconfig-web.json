{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "dom", "dom.iterable"],
    "sourceMap": true,
    "esModuleInterop": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "example", "build", "lib"]
}